{
  "solver": {
    "lr_policy": "fixed",
    "display": 10000,
    "max_iter": 2500000,
    "gpu": [0],
    "batchsize": 128,
    "snapshot": 100000,
    "snapshot_prefix": "./",
    "eval_interval": 10000,
    "eval_batches": 20,
    "dense_model_file": "./criteo.model"
  },
  
  "optimizer": {
    "type": "Adam",
    "adam_hparam": {
      "alpha": 0.005,
      "beta1": 0.9,
      "beta2": 0.999,
      "epsilon": 0.00000001
    }
  },

  "layers": [ 
    
    {
      "name": "data",
      "type": "Data",
      "source": "/gpfs/fs1/zehuanw/dataset/wdl/file_list.txt",
      "eval_source": "/gpfs/fs1/zehuanw/dataset/wdl/file_list_test.txt",
      "check": "Sum",
      "label": {
        "top": "label",
        "label_dim": 1
      },
      "dense": {
        "top": "dense",
        "dense_dim": 13
      },
      "sparse": [
	{
          "top": "wide_data",
          "type": "DistributedSlot",
          "max_feature_num_per_sample": 30,
          "slot_num": 1
        },
        {
          "top": "deep_data",
          "type": "LocalizedSlot",
          "max_feature_num_per_sample": 30,
          "slot_num": 26
        }
      ]
    },


    {
      "name": "sparse_embedding2",
      "type": "LocalizedSlotSparseEmbeddingHash",
      "plan_file": "./all2all_8_plan.json",
      "bottom": "wide_data",
      "top": "sparse_embedding2",
      "sparse_embedding_hparam": {
        "vocabulary_size": 1603616,
        "load_factor": 0.75,
        "embedding_vec_size": 32,
        "combiner": 1
      }
    },


    {
      "name": "sparse_embedding1",
      "type": "LocalizedSlotSparseEmbeddingHash",
      "plan_file": "./all2all_8_plan.json",
      "bottom": "deep_data",
      "top": "sparse_embedding1",
      "sparse_embedding_hparam": {
        "vocabulary_size": 1603616,
        "load_factor": 0.75,
        "embedding_vec_size": 32,
        "combiner": 1
      }
    },

    {
      "name": "reshape1",
      "type": "Reshape",
      "bottom": "sparse_embedding1",
      "top": "reshape1",
      "leading_dim": 832
    },


    {
      "name": "concat1",
      "type": "Concat",
      "bottom": ["reshape1","dense"],
      "top": "concat1"
    },


    {
      "name": "fc1",
      "type": "InnerProduct",
      "bottom": "concat1",
      "top": "fc1",
       "fc_param": {
        "num_output": 1024
      }
    },
    {
      "name": "relu1",
      "type": "ReLU",
      "bottom": "fc1",
      "top": "relu1"
     
    },
      
    {
      "name": "fc2",
      "type": "InnerProduct",
      "bottom": "relu1",
      "top": "fc2",
       "fc_param": {
        "num_output": 1024
      }
    },

    {
      "name": "relu2",
      "type": "ReLU",
      "bottom": "fc2",
      "top": "relu2"
     
    },
    
    {
      "name": "fc3",
      "type": "InnerProduct",
      "bottom": "relu2",
      "top": "fc3",
       "fc_param": {
        "num_output": 1024
      }
    },

    {
      "name": "relu3",
      "type": "ReLU",
      "bottom": "fc3",
      "top": "relu3"
     
    },

    {
      "name": "concat2",
      "type": "Concat",
      "bottom": ["relu3","sparse_embedding2"],
      "top": "concat2"
    },
    


    {
      "name": "fc4",
      "type": "InnerProduct",
      "bottom": "concat2",
      "top": "fc4",
       "fc_param": {
        "num_output": 1
      }
    },

    
    {
      "name": "loss",
      "type": "BinaryCrossEntropyLoss",
      "bottom": ["fc4","label"],
      "top": "loss"
    } 
  ]
}
